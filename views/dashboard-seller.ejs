<%- include('partials/header') %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Dashboard Penjual</h1>

    <% if (messages.success) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= messages.success %></span>
        </div>
    <% } %>

    <p class="mt-4 text-lg text-gray-700">
        Selamat datang kembali, <strong class="font-semibold"><%= user.name %></strong>!
    </p>

    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Card untuk Tambah Produk -->
        <a href="/dashboard/add-product" class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
            <h2 class="font-bold text-xl text-gray-800 mb-2">Tambah Produk Baru</h2>
            <p class="text-gray-600">Tambahkan produk baru ke dalam katalog toko Anda.</p>
        </a>

        <!-- Card untuk Kelola Produk -->
        <a href="/dashboard/seller/products" class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
            <h2 class="font-bold text-xl text-gray-800 mb-2">Kelola Produk Saya</h2>
            <p class="text-gray-600">Lihat, edit, atau hapus produk yang sudah Anda jual.</p>
        </a>
    </div>
</div>

<%- include('partials/footer') %>
