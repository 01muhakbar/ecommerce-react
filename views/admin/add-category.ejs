<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Kategori Baru</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-100 p-8">
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow-md">
      <div class="mb-4">
        <button onclick="history.back()" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
          Kembali
        </button>
      </div>
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Tambah Kategori Baru</h1>

      <form id="add-category-form" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700">Nama Kategori</label>
          <input type="text" id="name" name="name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
        </div>

        <div id="error-message" class="text-red-600 text-sm font-medium" style="display: none;"></div>
        <div id="success-message" class="text-green-600 text-sm font-medium" style="display: none;"></div>

        <div>
          <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Tambah Kategori
          </button>
        </div>
      </form>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const addCategoryForm = document.getElementById('add-category-form');
        const errorMessageDiv = document.getElementById('error-message');
        const successMessageDiv = document.getElementById('success-message');

        addCategoryForm.addEventListener('submit', async (event) => {
          event.preventDefault();

          errorMessageDiv.style.display = 'none';
          successMessageDiv.style.display = 'none';

          const name = document.getElementById('name').value;

          try {
            const response = await fetch('/dashboard/admin/categories', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({ name }),
            });

            const data = await response.json();

            if (!response.ok) {
              errorMessageDiv.textContent = data.message || 'Gagal menambahkan kategori.';
              errorMessageDiv.style.display = 'block';
              return;
            }

            successMessageDiv.textContent = 'Kategori berhasil ditambahkan!';
            successMessageDiv.style.display = 'block';
            addCategoryForm.reset(); // Clear form
            setTimeout(() => {
              window.location.href = '/dashboard/admin/categories';
            }, 1000);
          } catch (error) {
            console.error('Error adding category:', error);
            errorMessageDiv.textContent = 'Terjadi kesalahan jaringan saat menambahkan kategori.';
            errorMessageDiv.style.display = 'block';
          }
        });
      });
    </script>
  </body>
</html>