<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mb-4 mb-md-0">
      <!-- Placeholder untuk gambar produk -->
      <img
        src="https://placehold.co/600x400?text=<%= encodeURIComponent(product.name) %>"
        class="img-fluid rounded shadow-sm"
        alt="<%= product.name %>"
      />
    </div>
    <div class="col-md-6">
      <h1 class="display-5 fw-bold"><%= product.name %></h1>
      <p class="lead text-muted"><%= product.description %></p>
      <hr class="my-4" />
      <h3 class="mb-3">Rp <%= product.price.toLocaleString('id-ID') %></h3>
      <p class="mb-4">
        <strong>Stok:</strong>
        <% if (product.stock > 0) { %>
        <span class="badge bg-success fs-6"
          >Tersedia (<%= product.stock %>)</span
        >
        <% } else { %>
        <span class="badge bg-danger fs-6">Habis</span>
        <% } %>
      </p>
      <div class="d-flex gap-2 mb-4">
        <a
          href="/products/edit/<%= product.id %>"
          class="btn btn-primary btn-lg"
          >Edit</a
        >
        <form
          action="/products/<%= product.id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button
            type="submit"
            class="btn btn-outline-danger btn-lg"
            onclick="return confirm('Apakah Anda yakin ingin menghapus produk ini?');"
          >
            Hapus
          </button>
        </form>
      </div>
      <a href="/products" class="text-decoration-none"
        >&larr; Kembali ke Daftar Produk</a
      >
    </div>
  </div>
</div>

<%- include('partials/footer') %>
