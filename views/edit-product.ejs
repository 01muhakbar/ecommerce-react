<%- include('partials/header') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title mb-4">Edit Produk: <%= product.name %></h1>

        <form action="/products/<%= product.id %>?_method=PUT" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Nama Produk:</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              value="<%= product.name %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Deskripsi:</label>
            <textarea
              class="form-control"
              id="description"
              name="description"
              rows="4"
            >
<%= product.description %></textarea
            >
          </div>
          <div class="mb-3">
            <label for="price" class="form-label">Harga:</label>
            <input
              type="number"
              class="form-control"
              id="price"
              name="price"
              value="<%= product.price %>"
              required
            />
          </div>
          <div class="mb-3">
            <label for="stock" class="form-label">Stok:</label>
            <input
              type="number"
              class="form-control"
              id="stock"
              name="stock"
              value="<%= product.stock %>"
              required
            />
          </div>
          <div>
            <button type="submit" class="btn btn-primary">
              Simpan Perubahan
            </button>
            <a href="/products" class="btn btn-secondary">Batal</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
