<%- include('partials/header') %>

<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Semua Produk</h1>

    <% if (products && products.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            <% products.forEach(product => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden transform hover:scale-105 transition-transform duration-300">
                    <div class="p-6">
                        <h4 class="text-xl font-semibold text-gray-800 mb-2 truncate"><%= product.name %></h4>
                        <p class="text-gray-600 mb-4">Rp<%= new Intl.NumberFormat('id-ID').format(product.price) %></p>
                        
                        <form action="/cart/add/<%= product.id %>" method="POST">
                            <button type="submit" class="w-full bg-blue-500 text-white hover:bg-blue-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                                Tambah ke Keranjang
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-16">
            <h2 class="text-2xl font-semibold text-gray-700 mb-2">Belum Ada Produk</h2>
            <p class="text-gray-500">Silakan cek kembali nanti.</p>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>